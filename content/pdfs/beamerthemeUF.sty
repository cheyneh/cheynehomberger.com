\ProvidesPackage{beamerthemeUF} % Created by Cheyne Homberger 

\selectcolormodel{cmyk}
\mode<presentation>


% custom colors
\definecolor{UFcolorscheme1}{HTML}{FF6518}  % e.g. for block title
\definecolor{UFcolorblockbg}{HTML}{0033cc}
\definecolor{UFcolorblockfg}{HTML}{FCE94F}
\definecolor{UFcolorscheme2}{HTML}{C3DFFF}  % e.g. for poster background
\definecolor{UFcolorschemeHeadline}{HTML}{F0F0FF}  % for headline bg

% headline colors and fonts
\setbeamercolor{headline}{fg=black,bg=UFcolorschemeHeadline}
\setbeamercolor{title in headline}{fg=black}
\setbeamercolor{author in headline}{fg=black}
\setbeamercolor{institute in headline}{fg=black}
\setbeamercolor{logo in headline}{fg=black,bg=lightgray}
\setbeamercolor{separation line}{bg=UFcolorscheme1}

% footline colors and fonts
\setbeamercolor{footline}{fg=black,bg=UFcolorschemeHeadline}
\setbeamerfont{footline}{size=\normalsize}

% body colors and fonts
\setbeamercolor*{normal text}{fg=black,bg=UFcolorscheme2}

% block environment
\setbeamercolor*{block body}{bg=UFcolorschemeHeadline,fg=black}
\setbeamercolor*{block title}{fg=UFcolorblockfg,bg=UFcolorblockbg}
\setbeamerfont{block title}{size=\large,series=\bf}


\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

% ======================================================================%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}


% ======================================================================%
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}
      \begin{column}{.01\paperwidth}
      \end{column}

      \begin{column}{.1\paperwidth}
        {\center \includegraphics[width=4cm]{icubedlogo.pdf}}
      \end{column}

      \begin{column}{.67\paperwidth} % 
        \vskip4ex
        \raggedleft
        \vspace{1pc}
        \usebeamercolor{title in headline}{\color{fg}\textbf{\huge{\inserttitle}}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\Large{\insertauthor}\\[1ex]}
        \vspace{1pc}
      \end{column}

      \begin{column}{.01\paperwidth}
      \end{column}

      \begin{column}{.2\paperwidth}
        \begin{center}
          \includegraphics[width=.9\linewidth]{UFlogo.pdf}
        \end{center}
      \end{column}

      \begin{column}{.01\paperwidth}
      \end{column}

    \end{columns}
  \end{beamercolorbox}
  
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}



% ======================================================================%
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
  
  \begin{beamercolorbox}[ht=3ex,leftskip=1cm,rightskip=1cm]{footline}%
    \begin{flushright} \department \ - \insertinstitute \hspace{2pc} 
    \texttt{\email} \end{flushright}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line foot}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

\mode<all>

